@model IEnumerable<WebXemPhim.Models.Advertise>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý quảng cáo</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AdName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AdName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdImage)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AdID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AdID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AdID })
        </td>
    </tr>
}

</table>
